use warnings;

use FindBin;
use lib "$FindBin::Bin/../../lib/perl";
use Getopt::Lucid qw( :all );
use Config::Simple;

sub main {
	my $file = shift;

	my $config  = new Config::Simple($file);
	my $starter = $config->param("bin.starter");
	my $status  = $config->param("bin.status");

	my $result = `$status`;
	return ("wait") if ( $result eq "started" );

	if ( $result eq "done" ) {

		my $todayrun = time;
		my $lastrun  = $config->param("settings.lastrun");
		my $interval = $config->param("settings.interval");

		if ( ( $todayrun - $lastrun ) > $interval ) {
			return ("ready");
		}

		return ("done");
	}

	return ("ready");
}
exit( print( main("$FindBin::Bin/../../etc/vector.cnf") ) );

