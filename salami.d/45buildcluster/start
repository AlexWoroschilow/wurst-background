use FindBin;
use lib "$FindBin::Bin/../../lib/perl";
use ZBH::SGE;
use ZBH::Local;
use Config::Simple;
use ZBH::Flensburg;
use Log::Log4perl;


sub main {
  my $file = shift;
  Log::Log4perl->init(shift);

  my $config = new Config::Simple($file);
  my $logger = Log::Log4perl->get_logger("45buildcluster");

    my $starter = $config->param("45buildcluster.starter");
    if ( not ZBH::Local::is_file_exists($starter)) {
      $logger->fatal( "Can not start task, executalbe file not found: $starter");
      return("error");
    }	
    
    my $status = $config->param("45buildcluster.status");
    $logger->info( "45buildcluster.status", $status);
    if ( not ZBH::Local::is_file_exists($status)) {
      $logger->fatal("Can not start task, executalbe file not found: $status");
      return("error");
    }	
		
    my $sequence_graph = $config->param("45buildcluster.sequence_graph");
    $logger->info( "45buildcluster.sequence_graph", $sequence_graph);
    
    my $sequence_cluster = $config->param("45buildcluster.sequence_cluster");    
    $logger->info( "45buildcluster.sequence_cluster", $sequence_cluster);
    
    if ( not ZBH::Local::is_file_exists($sequence_graph)) {
      $logger->fatal("Can not start task, graph file not found: $sequence_graph");
      return("error");
    }	

    my $structure_graph = $config->param("45buildcluster.structure_graph");
    $logger->info( "45buildcluster.structure_graph", $structure_graph);
    
    my $structure_cluster = $config->param("45buildcluster.structure_cluster");    
    $logger->info( "45buildcluster.structure_cluster", $structure_cluster);
    
    if ( not ZBH::Local::is_file_exists($structure_graph)) {
      $logger->fatal("Can not start task, graph file not found: $structure_graph");
      return("error");
    }	    

    $logger->info("Start: $starter $sequence_graph $sequence_cluster");
    ZBH::Local::background("$starter $sequence_graph $sequence_cluster");
    
    $logger->info("Start: $starter $structure_graph $structure_cluster");
    ZBH::Local::background("$starter $structure_graph $structure_cluster");

    ZBH::Flensburg::info("45buildcluster", "Script starter report",
      "Script: $starter started \n convert graph: $sequence_graph to  cluster: $sequence_cluster \n" . 
      "Script: $starter started \n convert graph: $structure_graph to  cluster: $structure_cluster \n"
    );

    return ("wait");
}

exit( 
  not print( 
    main( 
      "$FindBin::Bin/../../etc/update.conf",
      "$FindBin::Bin/../../etc/logging.conf" ,
    ) 
  ) 
);
